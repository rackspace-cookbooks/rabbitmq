[
<% if node['rackspace_rabbitmq']['local_erl_networking'] %>
  {kernel, [{inet_dist_use_interface,{127,0,0,1}}]},
<% elsif node['rackspace_rabbitmq']['erl_networking_bind_address'] -%>
  {kernel, [{inet_dist_use_interface,{<%= node['rackspace_rabbitmq']['erl_networking_bind_address'].gsub(/\./, ',') %>}}]},
<% end %>
<% if node['rackspace_rabbitmq']['web_console_ssl'] -%>
  {rabbitmq_management, [
    {listener, [{port, <%= node['rackspace_rabbitmq']['web_console_ssl_port'] %>},
                {ssl, true}
              ]}
  ]},
<% end %>
  {rabbit, [
<% if node['rackspace_rabbitmq']['cluster'] && node['rackspace_rabbitmq']['cluster_disk_nodes'] -%>
    {cluster_nodes, [<%= node['rackspace_rabbitmq']['cluster_disk_nodes'].map{|n| "\'#{n}\'"}.join(',') %>]},
<% end %>
<% if node['rackspace_rabbitmq']['ssl'] -%>
    {ssl_listeners, [<%= node['rackspace_rabbitmq']['ssl_port'] %>]},
    {ssl_options, [{cacertfile,"<%= node['rackspace_rabbitmq']['ssl_cacert'] %>"},
                    {certfile,"<%= node['rackspace_rabbitmq']['ssl_cert'] %>"},
                    {keyfile,"<%= node['rackspace_rabbitmq']['ssl_key'] %>"},
                    {verify,<%= node['rackspace_rabbitmq']['ssl_verify'] %>},
                    {fail_if_no_peer_cert,<%= node['rackspace_rabbitmq']['ssl_fail_if_no_peer_cert'] %>}]},
<% end %>
    {tcp_listen_options, [binary, {packet,<%= node['rackspace_rabbitmq']['tcp_listen_packet'] %>},
                                  {reuseaddr,<%= node['rackspace_rabbitmq']['tcp_listen_reuseaddr'] %>},
                                  {backlog,<%= node['rackspace_rabbitmq']['tcp_listen_backlog'] %>},
                                  {nodelay,<%= node['rackspace_rabbitmq']['tcp_listen_nodelay'] %>},
                                  {exit_on_close,<%= node['rackspace_rabbitmq']['tcp_listen_exit_on_close'] %>},
                                  {keepalive,<%= node['rackspace_rabbitmq']['tcp_listen_keepalive'] %>}]},
<% if node['rackspace_rabbitmq']['disk_free_limit_relative'] -%>
    {disk_free_limit, {mem_relative, <%= node['rackspace_rabbitmq']['disk_free_limit_relative'] %>}},
<% end %>
<% if node['rackspace_rabbitmq']['vm_memory_high_watermark'] -%>
    {vm_memory_high_watermark, <%= node['rackspace_rabbitmq']['vm_memory_high_watermark'] %>},
<% end %>
    {default_user, <<"<%= node['rackspace_rabbitmq']['default_user'] %>">>},
    {default_pass, <<"<%= node['rackspace_rabbitmq']['default_pass'] %>">>}
  ]}
].
